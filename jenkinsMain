pipeline {
  agent any

  environment {
    NODE_ENV = 'development'
    // Adjust Android SDK path according to your CentOS system
    ANDROID_HOME = '/opt/android-sdk'
    PATH = "${ANDROID_HOME}/cmdline-tools/latest/bin:${ANDROID_HOME}/platform-tools:${ANDROID_HOME}/emulator:${ANDROID_HOME}/tools:${ANDROID_HOME}/tools/bin:${PATH}"
  }

  tools {
    nodejs 'jsnode' // Must be defined under Jenkins global tool configuration
  }

  stages {
    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/rohanPSI-1122/Android.git', credentialsId: 'rohanPSI-1122'
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('Lint') {
      steps {
        // Skip failure if eslint is not installed or returns non-zero
        script {
          try {
            sh 'npm run lint'
          } catch (Exception e) {
            echo "Linting failed or ESLint not installed. Continuing..."
          }
        }
      }
    }

    stage('Test') {
      steps {
        script {
          try {
            sh 'npm test'
          } catch (Exception e) {
            echo "Tests failed or none defined. Continuing..."
          }
        }
      }
    }

    stage('Build APK') {
      steps {
        dir('android') {
          sh './gradlew assembleDebug'
        }
      }
    }

    stage('Archive APK') {
      steps {
        archiveArtifacts artifacts: '**/app/build/outputs/**/*.apk', fingerprint: true
      }
    }
  }

  post {
    success {
      echo "✅ Build completed successfully!"
    }
    failure {
      echo "❌ Build failed."
    }
  }
}
